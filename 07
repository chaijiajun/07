#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	int n,b=0,c;
	printf("輸入一個數:");
	scanf("%d",&n);
	for(b=0;b<=n;b++)
	c+=n;
	printf("1+2+3+.....+%d=%d",n,c);
	system("pause");
	return 0;
}
